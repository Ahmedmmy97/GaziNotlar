<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87cefd"
    android:orientation="vertical"
    android:gravity="center"
    style="@style/AppTheme"
    android:id="@+id/maincontainer">
       <ImageView
           android:layout_width="300dp"
           android:layout_height="300dp"
           android:src="@drawable/logo"
           android:transitionName="logo"
           android:id="@+id/logo"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
       <LinearLayout
           android:alpha="0"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="30dp"
           android:gravity="center"
           android:id="@+id/signupLayout"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sign Up"
               android:textSize="30dp"
               android:textColor="#fff"
               android:textStyle="bold"
               />
           <FrameLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           <com.facebook.login.widget.LoginButton
               xmlns:facebook="http://schemas.android.com/apk/res-auto"
               facebook:com_facebook_login_text="Log in With Facebook"
               android:visibility="gone"
               android:id="@+id/buttonFacebookLogin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textSize="20sp"
               style="@style/FacebookLoginButton"/>
           <Button
               android:visibility="visible"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:id="@+id/buttonFacebookLoginvisible"
               android:text="Log in with Facebook"
               android:backgroundTint="#475993"
               android:textColor="#fff"
               android:textSize="18sp"
               android:gravity="left|center"
               android:drawablePadding="15dp"
               android:textStyle="bold"
               android:drawableLeft="@drawable/ic_facebook"/>
           </FrameLayout>
           <Button
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="Log in with Phone"
               android:backgroundTint="#D93025"
               android:textColor="#fff"
               android:textSize="18sp"
               android:gravity="left|center"
               android:drawablePadding="15dp"
               android:textStyle="bold"
               android:id="@+id/emaillogin"
               android:drawableLeft="@drawable/ic_phone_receiver"/>
       </LinearLayout>
</LinearLayout>