<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/arialfamily</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="ratingBarStyle">@style/AppThemeRatingBar</item>

    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/smallTxtSize</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="Menustyle" parent="Theme.MaterialComponents.Light">
      <item name="android:background">@android:color/white</item>
    </style>

</resources>
